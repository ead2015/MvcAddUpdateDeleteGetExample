@model List<MvcAddUpdateDeleteGetExample.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="~/Student/Create">Create New</a>

    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
           Name
        </th>
        <th>
            RollNumber
        </th>
        <th>
            Semester
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.Name
        </td>
        <td>
            @item.RollNumber
        </td>
        <td>
           @item.Semester
        </td>
        <td>
             <a href="~/Student/Edit/@item.Id">Edit</a> |

            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
